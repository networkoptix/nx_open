<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <artifactId>build_tests</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.1.0-SNAPSHOT</version>
        <relativePath>../build_tests</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>vms_cloud_integration_tests</artifactId>
    <packaging>pom</packaging>
    <name>Vms Cloud Integration Tests</name>

    <properties>
        <root.dir>${basedir}/../..</root.dir>

        <qt.libs>core network concurrent xml xmlpatterns sql multimedia</qt.libs>
        <global.libs>-lmediaserver_core -lcloud_db -lcloud_db_client -lcommon -lnx_network -lnx_fusion -lnx_utils</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm Wldap32.lib</windows.oslibs>
        <guid>${vms_cloud_integration_tests.guid}</guid>

        <windows.defines>_VARIADIC_MAX=10</windows.defines>

        <rdep.packages>gtest gmock openssl ffmpeg quazip</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mediaserver_core</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/mediaserver_core/pom.xml</systemPath>
        </dependency>
    </dependencies>
</project>
