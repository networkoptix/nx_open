<?xml version="1.0" encoding="utf-8"?>
<resources>
    <oem name="OnvifDevice">
		<resource name = "Pelco" public="OnvifDevice Camera">
			<params>
				<param name="supportedMotion" default_value="softwaregrid"/>
				<param name="ptzCapabilities" default_value="0"/>
			</params>
		</resource>
		<resource name = "PelcoOptera" public = "Pelco"/>
        <resource name = "IMM12018" public="PelcoOptera">
			<params>
				<param name="VideoLayout" default_value="width=3;height=1;sensors=0,1,2"/>
			</params>
		</resource>
        <resource name = "IMM12027" public="PelcoOptera">
			<params>
				<param name="VideoLayout" default_value="width=4;height=1;sensors=0,1,2,3"/>
			</params>
		</resource>
        <resource name = "IMM12036" public="PelcoOptera">
			<params>
				<param name="VideoLayout" default_value="width=5;height=1;sensors=0,1,2,3,4"/>
			</params>
		</resource>
        <resource name="Hikvision">
            <param name="supportedMotion" default_value="softwaregrid"/>
            <param name="ptzCapabilities" default_value="0"/>
        </resource>
    </oem>
</resources>
