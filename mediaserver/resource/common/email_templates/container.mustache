<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta name="viewport" content="width=device-width" />

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>{{productName}} notification</title>

<style>
{{>style_css}}
</style>   
</head>
 
<body bgcolor="#FFFFFF" topmargin="0" leftmargin="0" marginheight="0" marginwidth="0">

<table class="head-wrap" bgcolor="#999999">
    <tr>
        <td></td>
        <td class="header container" align="">
            <div class="content">
                <table bgcolor="#999999" >
                    <tr>
                        <td><img src="{{productLogoFilename}}" width="200" height="50"/></td>
                        <td align="right"><h6 class="collapse">System Notification</h6></td>
                    </tr>
                </table>
            </div>
            
        </td>
        <td></td>
    </tr>
</table>

<table class="body-wrap" bgcolor="">
    <tr>
        <td></td>
        <td class="container" align="" bgcolor="#FFFFFF">
            
            <!-- content -->
            <div class="content">
                <table>
                    <tr>
                        <td>
                            
                            <h3>Dear {{productName}} user,</h3>
                            <p class="lead">Some events occured with your system: <i>{{systemName}}</i></p>
                        </td>
                    </tr>
                </table>
            </div><!-- /content -->
            <!-- content -->
            <div class="content">
                <table bgcolor="">
                    <tr>
                        <td class="small" width="20%" style="vertical-align: top; padding-right:10px;"><img src="{{eventLogoFilename}}" width="75" height="75"/></td>
                        <td>
                            <h4>{{event}} <small>{{source}}</small></h4>
                            {{#urlext}}
                            <a class="btn" href="{{urlext}}">External Link &raquo;</a><a class="btn" href="{{urlint}}">Internal Link &raquo;</a>
                            {{/urlext}}
                        </td>
                    </tr>
                </table>
            </div>

            {{#typeCameraMotion}}
                {{> camera_motion}}
            {{/typeCameraMotion}}

            {{#typeCameraDisconnect}}
                {{> camera_disconnect}}
            {{/typeCameraDisconnect}}

            {{#typeStorageFailure}}
                {{> storage_failure}}
            {{/typeStorageFailure}}

            {{#typeNetworkIssue}}
                {{> network_issue}}
            {{/typeNetworkIssue}}

            {{#typeCameraIpConflict}}
                {{> camera_ip_conflict}}
            {{/typeCameraIpConflict}}
        
            {{#typeCameraInput}}
                {{> camera_input}}
            {{/typeCameraInput}}

            {{#typeMediaServerFailure}}
                {{> media_server_failure}}
            {{/typeMediaServerFailure}}

            {{#typeMediaServerConflict}}
                {{> media_server_conflict}}
            {{/typeMediaServerConflict}}

            <div class="content">
                <table bgcolor="">
                    <tr>
                        <td>
                            
                            <table bgcolor="" class="social" width="100%">
                                <tr>
                                    <td>
                                        
                                        <div class="column">
                                            <table bgcolor="" cellpadding="" align="left">
                                        <tr>
                                            <td>                
                                                <h5 class="">Support Info:</h5>
                                                <p>Web: <strong><a href="{{companyUrl}}">{{companyUrl}}</a></strong></p>
                                                <p>Email: <strong><a href="emailto:{{supportEmail}}">{{supportEmail}}</a></strong></p>
                                            </td>
                                        </tr>
                                    </table>
                                        </div>
                                        <div class="clear"></div>
    
                                    </td>
                                </tr>
                            </table>
                            
                        </td>
                    </tr>
                </table>
            </div>
            

        </td>
        <td></td>
    </tr>
</table>

</body>
</html>
