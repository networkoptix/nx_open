<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
	<parent>
		<artifactId>cpp</artifactId>
		<groupId>com.networkoptix.hdwitness</groupId>
		<version>1.5.2-SNAPSHOT</version>
		<relativePath>../cpp</relativePath>
	</parent>

	<groupId>com.networkoptix.hdwitness</groupId>
	<version>1.5.2-SNAPSHOT</version>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>mediaserver</artifactId>
	<packaging>pom</packaging>
	<name>HD Witness Media Server</name>    

	<properties>
		<product.title>${mediaserver.name}</product.title>  
        <!--Global libs-->		
		<global.libs></global.libs>
		<!--Specific os libs used-->
		<windows.oslibs>-lws2_32 -lIphlpapi -lOle32 -lwinmm</windows.oslibs>
		<linux.oslibs>-lz</linux.oslibs>
                <postfix.libs>unix: !mac: LIBS += -lcrypto</postfix.libs>
		<mac.oslibs>-lbz2 -framework IOKit -framework CoreServices -framework QtConcurrent -lavcodec -lswscale -lavutil -lavformat</mac.oslibs>
		<!--Global defines-->
		<global.defines/>
		<!--Specific os defines-->
		<windows.defines/>
		<linux.defines/>
		<mac.defines/>      
	</properties>	
</project>
