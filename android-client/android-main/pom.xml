<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <artifactId>android-client</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>2.6.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.networkoptix.hdwitness</groupId>
    <artifactId>android-main</artifactId>
    <version>2.6.0-SNAPSHOT</version>
    <packaging>apk</packaging>
    <name>HD Witness Android Client</name>

    <properties>
        <!-- Change it to point relatively to the root-->
        <root.dir>${basedir}/../..</root.dir>
        <unpack.skip>true</unpack.skip>
        <project.version.name.number>${release.version}</project.version.name.number>
        <project.version.code>${buildNumber}</project.version.code>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.emulator.name>emulator</project.emulator.name> 
        <project.version.name>${project.version.name.number}${project.version.name.qualifier}</project.version.name>
        <project.verbosity>true</project.verbosity>

        <android.release>false</android.release>
        <project.verbosity>true</project.verbosity>
        <project.debug.mode>true</project.debug.mode>
        <project.version.name.qualifier>-dev</project.version.name.qualifier>
        <google.keystore>${project.build.directory}/debug.keystore</google.keystore>
        <google.storepass>android</google.storepass>
        <google.keypass>android</google.keypass>
        <google.alias>androiddebugkey</google.alias>
        <final.artifact.name>${display.namespace.additional}-beta</final.artifact.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <version>4.4.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.networkoptix.hdwitness</groupId>
            <version>${project.version}</version>
            <artifactId>protobuf-classes</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>support-v13</artifactId>
            <version>19.1.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.2.4</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <!-- Android Maven plugin doesn't recognize any properties other than artifactId and version -->
        <finalName>android-client-${project.version}</finalName>
        <plugins>	
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>copy-platform-libs</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/libs</outputDirectory>
                        </configuration>                        
                    </execution>                            
                </executions>
            </plugin>         
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <id>rsync-buildenv</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${environment.dir}/get_android.bat</executable>
                            <workingDirectory>${environment.dir}</workingDirectory>		
                            <skip>${rsync.skip}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>		
            <!-- <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>dirty-gdb-resources</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/res</outputDirectory>
                            <resources>                                        		
                                <resource>
                                    <targetPath>${project.basedir}/res</targetPath>
                                    <directory>${project.build.directory}/resources</directory>
                                    <filtering>false</filtering>
                                    <excludes>
                                        <exclude>com/networkoptix/**</exclude>
                                    </excludes>
                                </resource>	                     
                            </resources>              
                            <overwrite>true</overwrite>
                        </configuration>            
                    </execution>
                </executions>
            </plugin> -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
                <executions>				
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <version>3.9.0-rc.2</version>
                <configuration>
                    <androidManifestFile>${project.build.directory}/manifest/AndroidManifest.xml</androidManifestFile>
                    <assetsDirectory>${project.basedir}/assets</assetsDirectory>
                    <release>${android.release}</release>
                    <resourceDirectory>${project.build.directory}/resources</resourceDirectory>
                    <nativeLibrariesDirectory>${project.basedir}/src/main/native</nativeLibrariesDirectory>
                    <sdk>
                        <platform>21</platform>
                        <path>${env.ENVIRONMENT}/android-sdk</path>
                    </sdk>
                    <undeployBeforeDeploy>true</undeployBeforeDeploy>
                    <manifest>
                        <versionName>${project.version.name}</versionName>
                        <versionCode>${project.version.code}</versionCode>
                        <debuggable>${project.debug.mode}</debuggable>
                    </manifest>	
                    <emulator>
                        <avd>${project.emulator.name}</avd>
                        <wait>300000</wait>
                        <!-- 5 min -->
                        <options>-no-window</options>
                    </emulator>		
                    <zipalign>
                        <skip>false</skip>
                        <verbose>${project.verbosity}</verbose>
                        <inputApk>${project.build.directory}/${project.build.finalName}.apk</inputApk>
                        <outputApk>${project.build.directory}/${final.artifact.name}-android-${release.version}.${project.version.code}-distrib.apk</outputApk>
                    </zipalign>						
                </configuration>
                <executions>
                    <execution>
                        <id>zipalign</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>zipalign</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>update-manifest</id>
                        <goals>
                            <goal>manifest-update</goal>
                        </goals>
                    </execution>
                </executions>				
                <extensions>true</extensions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jarsigner-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>signing</id>
                        <goals>
                            <goal>sign</goal>
                            <goal>verify</goal>
                        </goals>
                        <phase>package</phase>
                        <inherited>true</inherited>
                        <configuration>
                            <archiveDirectory/>
                            <includes>
                                <include>${project.build.directory}/*-distrib.apk</include>
                            </includes>
                            <keystore>${google.keystore}</keystore>
                            <storepass>${google.storepass}</storepass>
                            <keypass>${google.keypass}</keypass>
                            <alias>${google.alias}</alias>
                            <removeExistingSignatures>true</removeExistingSignatures>
                            <verbose>${project.verbosity}</verbose>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>nobeta</id>
            <activation>
                <property>
                    <name>beta</name>
                    <value>false</value>
                </property>				
            </activation>
            <properties>
                <android.release>true</android.release>
                <project.verbosity>false</project.verbosity>
                <project.debug.mode>false</project.debug.mode>
                <project.version.name.qualifier>-prod</project.version.name.qualifier>
                <google.keystore>${customization.dir}/${project.artifactId}/key.store</google.keystore>
                <google.storepass>${android.storepass}</google.storepass>
                <google.keypass>${android.keypass}</google.keypass>
                <google.alias>${namespace.additional}</google.alias>  
                <final.artifact.name>${display.namespace.additional}-release</final.artifact.name>
            </properties>
            <build>
            </build>
        </profile>

        <profile>
            <!-- Common Profile for Linux, Mac, Arm -->
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os> 
            </activation>
            <properties>
                <rsync.skip>true</rsync.skip>
            </properties>
        </profile>                   
    </profiles>		
</project>
