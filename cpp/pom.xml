								</pathconvert>								
								<echo file="${project.build.directory}/${project.artifactId}.pro" append="true">${line.separator}${linux_release_libs}${line.separator}}</echo>
								
								<!--<fileset id="linux_release_link_libs_path" dir="${libdir}/build/bin/release" erroronmissingdir="false">
									<include name="**/*.so" />
									<include name="**/*.a" />									
								</fileset>
