 <assembly>
	<id>${platform}-${arch}-${build.configuration}-${customization}-exec</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/bin/${build.configuration}</directory>
			<outputDirectory>../</outputDirectory>
			<excludes>
				<exclude>*.ilk</exclude>
			</excludes>
			</fileSet>
		<fileSet>
			<directory>${project.build.directory}/build</directory>
			<outputDirectory>../</outputDirectory>
			<includes>
				<include>*.pdb</include>
			</includes>
		</fileSet>		
	</fileSets>
</assembly>