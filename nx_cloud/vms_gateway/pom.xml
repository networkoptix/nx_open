    <version>3.1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>vms_gateway</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud VMS Gateway</name>

    <properties>
        <guid>${vms_gateway.guid}</guid>
        <product.title>${company.name} vms_gateway</product.title>

        <qt.libs>core gui network concurrent sql xml</qt.libs>
        <global.libs>-lvms_gateway_core -lnx_network -lnx_utils</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm</windows.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>

        <rdep.packages>openssl ffmpeg quazip</rdep.packages>
