    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>librelaying</artifactId>
    <packaging>pom</packaging>
    <name>Nx Relaying Library</name>

    <properties>
        <guid>${librelaying.guid}</guid>
        <product.title>${company.name} relaying library</product.title>
        <template>lib</template>
        <targetName>relaying</targetName>

        <qt.libs>core gui</qt.libs>
        <global.libs>-lnx_network -lnx_fusion -lnx_utils</global.libs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>
        <buildLib>sharedlib</buildLib>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_network</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_network/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_fusion</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_fusion/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_utils</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_utils/pom.xml</systemPath>
        </dependency>
    </dependencies>
</project>
