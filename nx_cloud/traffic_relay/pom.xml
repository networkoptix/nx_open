    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>traffic_relay</artifactId>
    <packaging>pom</packaging>
    <name>Nx Traffic Relay Server Launcher</name>

    <properties>
        <guid>${traffic_relay.guid}</guid>
        <product.title>${company.name} traffic relay launcher</product.title>

        <qt.libs>core network concurrent gui</qt.libs>
        <global.libs>-lcommon -ludt -lnx_network -lnx_streaming -lnx_fusion -lnx_utils -ltraffic_relay</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm</windows.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>

        <rdep.packages>openssl</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libtraffic_relay</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libtraffic_relay/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
