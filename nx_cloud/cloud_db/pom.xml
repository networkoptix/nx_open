<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!--
        Example pom for delegating maven goals to msbuild so it builds the "solution"

        A solution can be a group of projects, but here we only have one.
        It should also be possible to have one maven project per solution project,
        and have a parent pom to deletegate the build.
    -->

    <parent>
        <artifactId>nx_cloud</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>2.6.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>2.6.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cloud_db</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud cloud_db</name>

    <properties>
        <guid>${cloud_db.guid}</guid>
        <product.title>${company.name} cloud_db</product.title>
        <!--Global libs-->
        <qt.libs>core network concurrent sql xml</qt.libs>
        <global.libs>-lcloud_db -lnx_utils -lcommon -lnx_streaming -ludt -lnx_network -lcloud_db_client</global.libs>
        <!--Specific os libs used-->
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm</windows.oslibs>
        <windows.oslibs.release/>
        <windows.oslibs.debug/>
        <linux.oslibs>-lavcodec -lavformat -lavutil -lfaac -lswscale -lvpx</linux.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>
        <!--Global defines-->
        <global.defines/>
        <!--Specific os defines-->
        <windows.defines/>
        <linux.defines/>
        <mac.defines/>
        <rdep.packages>openssl quazip</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
