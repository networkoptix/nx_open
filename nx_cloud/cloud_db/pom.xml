    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.2.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cloud_db</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud Db</name>

    <properties>
        <guid>${cloud_db.guid}</guid>
        <product.title>${company.name} cloud_db</product.title>

        <qt.libs>core gui network concurrent sql xml</qt.libs>
        <global.libs>-lcloud_db -lcommon -ludt -lnx_network -lcloud_db_client -lnx_fusion -lnx_utils -lappserver2 -lnx_kit</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm</windows.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>

        <rdep.packages>openssl ffmpeg quazip</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
