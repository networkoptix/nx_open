<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>hdwitness</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.1.1-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.1.1-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cloud_tests</artifactId>
    <packaging>pom</packaging>
    <name>Cloud Tests Package</name>

    <properties>
        <root.dir>${basedir}/../..</root.dir>
        <template>app</template>
        <qt.libs/>
    </properties>

    <modules>
        <module>cloud_connect_integration_tests</module>
    </modules>

    <profiles>
        <profile>
            <id>linux-arm-bpi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>bpi</value>
                </property>
            </activation>
            <modules>
                <module>../libtraffic_relay</module> <!-- Required by cloud_connect_integration_tests. -->
            </modules>
        </profile>
    </profiles>

</project>
