<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <artifactId>nx_cloud</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.1.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cloud_db_test_util</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud DB Testing Utility</name>

    <properties>
        <guid>${cloud_db_test_util.guid}</guid>
        <product.title>${company.name} Cloud DB Testing Utility</product.title>

        <qt.libs>core concurrent xml sql network gui</qt.libs>
        <global.libs>-lcommon -lappserver2 -lnx_streaming -lnx_network -ludt -lnx_fusion -lnx_utils -lcloud_db -lcloud_db_client</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm</windows.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>

        <rdep.packages>openssl quazip</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_network</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_network/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
