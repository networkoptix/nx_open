<?xml version="1.0" encoding="utf-8"?>
<Theme xmlns="http://wixtoolset.org/schemas/thmutil/2010">
  <Window Width="548" Height="404" HexStyle="100a0000" FontId="0">#(loc.Caption)</Window>
  <Font Id="0" Height="-13" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
  <Font Id="1" Height="-26" Weight="500" Foreground="000000" Bold="yes">Segoe UI</Font>
  <Font Id="2" Height="-22" Weight="500" Foreground="666666" Background="FFFFFF">Segoe UI</Font>
  <Font Id="3" Height="-13" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
  <Font Id="4" Height="-13" Weight="500" Foreground="ff0000" Background="FFFFFF" Underline="yes">Segoe UI</Font>
  <Font Id="5" Height="-24" Weight="500" Foreground="000000" Background="E0E0E0">Segoe UI</Font>
  <Font Id="6" Height="-22" Weight="500" Foreground="666666">Segoe UI</Font>
  <Font Id="7" Height="-12" Weight="500" Foreground="000000">Segoe UI</Font>
  <Font Id="8" Height="-16" Weight="500" Foreground="000000">Segoe UI</Font>

<!--  <Text X="130" Y="-45" Width="500" Height="2" FontId="5" Visible="yes"></Text> -->
  <Page Name="Help">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Button Name="HelpCancelButton" X="-11" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.HelpCloseButton)</Button>
  </Page>

  <Page Name="Install">
    <Button Name="InstallButton" X="-11" Y="-11" Width="150" Height="28" TabStop="yes" FontId="0">Accept and Install</Button>
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="223" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>
    <Text X="12" Y="174" Width="-12" Height="40" FontId="1" DisablePrefix="yes" Center="yes">${display.product.name} ${parsedVersion.majorVersion}.${parsedVersion.minorVersion}</Text>
    <Text X="12" Y="214" Width="-12" Height="24" FontId="8" DisablePrefix="yes" Center="yes">#(loc.Components)</Text>
    <Text X="12" Y="-64" Width="-12" Height="16" FontId="7" DisablePrefix="yes" Center="yes">By clicking "Accept and Install" you are agreeing to our</Text>
    <Hypertext Name="EulaHyperlink" X="180" Y="-40" Width="-11" Height="16" TabStop="no" FontId="7" HideWhenDisabled="yes" Center="yes">#(loc.InstallLicenseLinkText)</Hypertext>
    <Button Name="OptionsButton" X="11" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.InstallOptionsButton)</Button>
  </Page>
  <Page Name="Options">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="24" Y="24" Width="64" Height="64" ImageFile="logo_small.png"/>
    <Text X="24" Y="104" Width="-11" Height="32" FontId="6">Options</Text>
    <Text X="24" Y="136" Width="-11" Height="17" FontId="7">Select applications to be installed:</Text>
    <Button Name="InstallClientAndServer" X="24" Y="161" Width="210" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="no" HexStyle="0x000009">Client and Server</Button>
    <Button Name="InstallClientOnly" X="24" Y="181" Width="210" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="no" HexStyle="0x000009">Client only</Button>
    <Button Name="InstallServerOnly" X="24" Y="201" Width="210" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="no" HexStyle="0x000009">Server only</Button>

    <Text X="24" Y="226" Width="-12" Height="100" FontId="7" DisablePrefix="yes">The Server application is used to to store System information and archives.</Text>
    <Text X="24" Y="246" Width="-12" Height="100" FontId="7" DisablePrefix="yes">The Client application is used to view video and manage the System</Text>

    <Button Name="OptionsCancelButton" X="12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">Cancel</Button>
    <Button Name="OptionsOkButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">OK</Button>
  </Page>
  <Page Name="Progress">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="229" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>
    <Text X="12" Y="184" Width="-12" Height="40" FontId="1" DisablePrefix="yes" Center="yes">${display.product.name} ${parsedVersion.majorVersion}.${parsedVersion.minorVersion}</Text>
    <Progressbar Name="OverallCalculatedProgressbar" X="150" Y="256" Width="250" Height="18" />
    <Text X="12" Y="282" Width="-12" Height="40" FontId="8" DisablePrefix="yes" Center="yes">#(loc.ProgressLabel)</Text>
    <Button Name="ProgressCancelButton" X="-11" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.ProgressCancelButton)</Button>
  </Page>
  <Page Name="Modify">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Text X="150" Y="30" Width="-11" Height="100" FontId="6" DisablePrefix="yes">#(loc.ModifyHeader)</Text>
    <Button Name="RepairButton" X="-171" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.ModifyRepairButton)</Button>
    <Button Name="UninstallButton" X="-91" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.ModifyUninstallButton)</Button>
    <Button Name="ModifyCancelButton" X="-11" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.ModifyCloseButton)</Button>
  </Page>
  <Page Name="Success">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="229" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>

    <Text Name="SuccessInstallHeader" Center="yes" X="12" Y="174" Width="-12" Height="40" FontId="6" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessInstallHeader)</Text>
    <Text Name="SuccessUninstallHeader" Center="yes" X="12" Y="174" Width="-12" Height="40" FontId="6" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessUninstallHeader)</Text> 

    <Button Name="LaunchButton" X="-91" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessLaunchButton)</Button>
    <Text Name="SuccessRestartText" X="150" Y="-51" Width="-11" Height="34" FontId="7" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessRestartText)</Text>
    <Button Name="SuccessRestartButton" X="-91" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessRestartButton)</Button>
    <Button Name="SuccessCancelButton" X="-11" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.SuccessCloseButton)</Button>
  </Page>
  <Page Name="Failure">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="24" Y="24" Width="64" Height="64" ImageFile="logo_small.png"/>
    <Text X="24" Y="104" Width="-11" Height="32" FontId="6">#(loc.FailureHeader)</Text>
    <Hypertext Name="FailureLogFileLink" X="150" Y="121" Width="-11" Height="51" FontId="7" TabStop="yes" HideWhenDisabled="yes">#(loc.FailureHyperlinkLogText)</Hypertext>
    <Hypertext Name="FailureMessageText" X="150" Y="171" Width="-11" Height="51" FontId="7" TabStop="yes" HideWhenDisabled="yes" />
    <Text Name="FailureRestartText" X="150" Y="200" Width="-11" Height="34" FontId="7" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.FailureRestartText)</Text>
    <Button Name="FailureRestartButton" X="-91" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.FailureRestartButton)</Button>
    <Button Name="FailureCloseButton" X="-11" Y="-11" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.FailureCloseButton)</Button>
  </Page>
</Theme>