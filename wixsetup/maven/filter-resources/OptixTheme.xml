<?xml version="1.0" encoding="utf-8"?>
<Theme xmlns="http://wixtoolset.org/schemas/thmutil/2010">
  <Window Width="548" Height="404" HexStyle="100a0000" FontId="0">#(loc.Caption)</Window>
  <Font Id="0" Height="-13" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
  <Font Id="1" Height="-26" Weight="700" Foreground="000000">Segoe UI</Font>
  <Font Id="2" Height="-22" Weight="500" Foreground="666666" Background="FFFFFF">Segoe UI</Font>
  <Font Id="3" Height="-13" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
  <Font Id="4" Height="-13" Weight="500" Foreground="ff0000" Background="FFFFFF" Underline="yes">Segoe UI</Font>
  <Font Id="5" Height="-24" Weight="700" Foreground="000000">Segoe UI</Font>
  <Font Id="6" Height="-22" Weight="700" Foreground="000000">Segoe UI</Font>
  <Font Id="7" Height="-12" Weight="500" Foreground="000000">Segoe UI</Font>
  <Font Id="8" Height="-16" Weight="500" Foreground="000000">Segoe UI</Font>
  <Font Id="9" Height="-13" Weight="500" Foreground="000000">Segoe UI</Font>
  <Font Id="10" Height="-26" Weight="700" Foreground="000000" Background="FFFFFF">Segoe UI</Font>
  <Font Id="11" Height="-16" Weight="500" Foreground="000000" Background="FFFFFF">Segoe UI</Font>

<!--  <Text X="130" Y="-45" Width="500" Height="2" FontId="5" Visible="yes"></Text> -->
  <Page Name="Help">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Button Name="HelpCancelButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.HelpCloseButton)</Button>
  </Page>

  <Page Name="Install">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="223" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>
    <Text X="12" Y="174" Width="-12" Height="40" FontId="1" DisablePrefix="yes" Center="yes">${display.product.name} ${parsedVersion.majorVersion}.${parsedVersion.minorVersion}</Text>
    <Text X="12" Y="214" Width="-12" Height="24" FontId="8" DisablePrefix="yes" Center="yes">#(loc.Components)</Text>
    <Text X="12" Y="-64" Width="-12" Height="16" FontId="7" DisablePrefix="yes" Center="yes">By clicking "Accept and Install" you are agreeing to our</Text>
    <Hypertext Name="EulaHyperlink" X="190" Y="-48" Width="-12" Height="16" TabStop="no" FontId="7" HideWhenDisabled="yes">#(loc.InstallLicenseLinkText)</Hypertext>
    <Button Name="OptionsButton" X="12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.InstallOptionsButton)</Button>
    <Button Name="InstallButton" X="-12" Y="-12" Width="150" Height="28" TabStop="yes" FontId="0">Accept and Install</Button>
  </Page>
  <Page Name="Options">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="24" Y="24" Width="64" Height="64" ImageFile="logo_small.png"/>
    <Text X="24" Y="104" Width="-12" Height="32" FontId="6">Options</Text>
    <Text X="24" Y="141" Width="-12" Height="17" FontId="9">Select applications to be installed:</Text>
    <Button Name="InstallClientAndServer" X="24" Y="166" Width="210" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="no" HexStyle="0x000009">Client and Server</Button>
    <Button Name="InstallClientOnly" X="24" Y="186" Width="210" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="no" HexStyle="0x000009">Client only</Button>
    <Button Name="InstallServerOnly" X="24" Y="206" Width="210" Height="17" TabStop="yes" FontId="3" HideWhenDisabled="no" HexStyle="0x000009">Server only</Button>

    <Text X="24" Y="241" Width="-12" Height="20" FontId="9" DisablePrefix="yes">The Server application is used to to store System information and archives.</Text>
    <Text X="24" Y="261" Width="-12" Height="20" FontId="9" DisablePrefix="yes">The Client application is used to view video and manage the System</Text>

    <Button Name="OptionsCancelButton" X="12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">Cancel</Button>
    <Button Name="OptionsOkButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">OK</Button>
  </Page>
  <Page Name="FilesInUse">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="24" Y="24" Width="64" Height="64" ImageFile="logo_small.png"/>
    <Text X="12" Y="104" Width="-164" Height="34" FontId="9" DisablePrefix="yes">#(loc.FilesInUseLabel)</Text>
    <Text Name="FilesInUseText"  X="12" Y="166" Width="-164" Height="-86" FontId="9" DisablePrefix="yes" HexStyle="0x0000C000"></Text>

    <Button Name="FilesInUseCloseRadioButton" X="12" Y="-64" Width="-164" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes" HexStyle="0x000009">#(loc.FilesInUseCloseRadioButton)</Button>
    <Button Name="FilesInUseDontCloseRadioButton" X="12" Y="-44" Width="-164" Height="23" TabStop="yes" FontId="0" HideWhenDisabled="yes" HexStyle="0x000009">#(loc.FilesInUseDontCloseRadioButton)</Button>

    <Button Name="FilesInUseOkButton" X="-92" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.FilesInUseOkButton)</Button>
    <Button Name="FilesInUseCancelButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.FilesInUseCancelButton)</Button>
  </Page>
  <Page Name="Progress">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="229" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>
    <Text X="12" Y="184" Width="-12" Height="40" FontId="1" DisablePrefix="yes" Center="yes">${display.product.name} ${parsedVersion.majorVersion}.${parsedVersion.minorVersion}</Text>
    <Progressbar Name="OverallCalculatedProgressbar" X="150" Y="256" Width="250" Height="18" />
    <Text X="12" Y="282" Width="-12" Height="40" FontId="8" DisablePrefix="yes" Center="yes">#(loc.ProgressLabel)</Text>
    <Button Name="ProgressCancelButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.ProgressCancelButton)</Button>
  </Page>
  <Page Name="Modify">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="223" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>
    <Text X="12" Y="174" Width="-12" Height="40" FontId="1" DisablePrefix="yes" Center="yes">Uninstall ${display.product.name}</Text>
    <Text X="12" Y="214" Width="-12" Height="24" FontId="8" DisablePrefix="yes" Center="yes">#(loc.Components)</Text>

    <Button Name="UninstallButton" X="-92" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.ModifyUninstallButton)</Button>
    <Button Name="ModifyCancelButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.ModifyCloseButton)</Button>
  </Page>
  <Page Name="Success">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="229" Y="56" Width="102" Height="102" ImageFile="logo_big.png"/>

    <Text Name="SuccessInstallHeader" Center="yes" X="12" Y="174" Width="-12" Height="40" FontId="6" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessInstallHeader)</Text>
    <Text Name="SuccessUninstallHeader" Center="yes" X="12" Y="174" Width="-12" Height="40" FontId="6" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessUninstallHeader)</Text> 

    <Button Name="LaunchButton" X="-91" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessLaunchButton)</Button>
    <Text Name="SuccessRestartText" X="150" Y="-51" Width="-12" Height="34" FontId="7" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.SuccessRestartText)</Text>
    <Button Name="SuccessRestartButton" X="-92" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.SuccessRestartButton)</Button>
    <Button Name="SuccessCancelButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.SuccessCloseButton)</Button>
  </Page>
  <Page Name="Failure">
    <Image X="-1" Y="1" Width="349" Height="252" ImageFile="installer_bg.png"/>
    <Image X="24" Y="24" Width="64" Height="64" ImageFile="logo_small.png"/>
    <Text X="24" Y="104" Width="-12" Height="32" FontId="6">#(loc.FailureHeader)</Text>
    <Hypertext Name="FailureLogFileLink" X="24" Y="145" Width="-164" Height="51" FontId="7" TabStop="yes" HideWhenDisabled="yes">#(loc.FailureHyperlinkLogText)</Hypertext>
    <Hypertext Name="FailureMessageText" X="24" Y="195" Width="-164" Height="71" FontId="7" TabStop="yes" HideWhenDisabled="yes" />
    <Text Name="FailureRestartText" X="24" Y="245" Width="-164" Height="34" FontId="7" HideWhenDisabled="yes" DisablePrefix="yes">#(loc.FailureRestartText)</Text>
    <Button Name="FailureRestartButton" X="-92" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0" HideWhenDisabled="yes">#(loc.FailureRestartButton)</Button>
    <Button Name="FailureCloseButton" X="-12" Y="-12" Width="75" Height="28" TabStop="yes" FontId="0">#(loc.FailureCloseButton)</Button>
  </Page>
</Theme>