 <assembly>
	<id>${platform}-${arch}-${release.version}.${buildNumber}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
        <fileSet>
            <directory>${libdir}/${arch}/bin/release</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>imageformats/*.dll</include>
                <include>platforms/*.dll</include>
                <include>styles/**</include>
                <include>help/**</include>
                <include>vox/**</include>
                <include>av*.dll</include>
                <include>icu*.dll</include>
                <include>lib*.dll</include>
                <include>openal32.dll</include>
                <include>qjson.dll</include>
                <include>Qt5*.dll</include>
                <include>quazip.dll</include>
                <include>sigar.dll</include>
                <include>ssleay32.dll</include>
                <include>swscale-2.dll</include>
                <include>wrap_oal.dll</include>
                <include>zlibwapi.dll</include>
                <include>client.exe</include>
                <include>applauncher.exe</include>
            </includes>		
        </fileSet>			
		<fileSet>
			<directory>${project.build.directory}/client</directory>
			<outputDirectory>..</outputDirectory>
			<includes>
				<include>update.json</include>
			</includes>		
		</fileSet>				
	</fileSets>
</assembly>