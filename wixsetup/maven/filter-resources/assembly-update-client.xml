 <assembly>
    <id>${box}-${arch}-${release.version}.${buildNumber}</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${libdir}/bin/release</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>audio/**</include>
                <include>fonts/**</include>
                <include>imageformats/*.dll</include>
                <include>platforms/*.dll</include>
                <include>qml/**</include>
                <include>vox/**</include>
                <include>av*.dll</include>
                <include>${applauncher.binary.name}</include>
                <include>${client.binary.name}</include>
                <include>${minilauncher.binary.name}</include>
                <include>lib*.dll</include>
                <include>nx*.dll</include>
                <include>OpenAL32.dll</include>
                <include>quazip.dll</include>
                <include>sigar.dll</include>
                <include>ssleay32.dll</include>
                <include>swscale-2.dll</include>
                <include>swresample-2.dll</include>
                <include>swscale-4.dll</include>
                <include>udt.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${qt.dir}/bin</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>icu*.dll</include>
                <include>Qt5Concurrent.dll</include>
                <include>Qt5Core.dll</include>
                <include>Qt5Gui.dll</include>
                <include>Qt5LabsTemplates.dll</include>
                <include>Qt5Multimedia.dll</include>
                <include>Qt5MultimediaWidgets.dll</include>
                <include>Qt5MultimediaQuick_p.dll</include>
                <include>Qt5Network.dll</include>
                <include>Qt5OpenGL.dll</include>
                <include>Qt5PrintSupport.dll</include>
                <include>Qt5Qml.dll</include>
                <include>Qt5Quick.dll</include>
                <include>Qt5QuickWidgets.dll</include>
                <include>Qt5Sql.dll</include>
                <include>Qt5WebChannel.dll</include>
                <include>Qt5WebKit.dll</include>
                <include>Qt5WebKitWidgets.dll</include>
                <include>Qt5Widgets.dll</include>
                <include>Qt5Xml.dll</include>
                <include>Qt5XmlPatterns.dll</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/client</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>update.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${VC14RedistPath}/bin</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${VC12RedistPath}/bin</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${environment.dir}/help/${release.version}/${customization}</directory>
            <outputDirectory>../help</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
