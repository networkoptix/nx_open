 <assembly>
	<id>${box}-${arch}-${release.version}.${buildNumber}</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/bin/exe</directory>
			<outputDirectory>..</outputDirectory>
			<includes>
				<include>*-server-*.exe</include>
			</includes>		
		</fileSet>				
		<fileSet>
			<directory>${project.build.directory}/server</directory>
			<outputDirectory>..</outputDirectory>
			<includes>
				<include>update.json</include>
				<include>install.bat</include>
			</includes>		
		</fileSet>				
	</fileSets>
</assembly>