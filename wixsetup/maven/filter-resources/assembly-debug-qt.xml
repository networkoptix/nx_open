 <assembly>
    <id>qt_pdb</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${qt.dir}/bin</directory>
            <outputDirectory>../</outputDirectory>
            <includes>
                <include>**/Qt5*.pdb</include>
            </includes>
            <excludes>
                <exclude>**/*d.pdb</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${qt.dir}/plugins/platforms</directory>
            <outputDirectory>plugins/platforms</outputDirectory>
            <includes>
                <include>**/*.pdb</include>
            </includes>
            <excludes>
                <exclude>**/*d.pdb</exclude>
                <exclude>Qt5WebEngine*.pdb</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${qt.dir}/qml</directory>
            <outputDirectory>qml</outputDirectory>
            <includes>
                <include>**/*.pdb</include>
            </includes>
            <excludes>
                <exclude>**/*d.pdb</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>