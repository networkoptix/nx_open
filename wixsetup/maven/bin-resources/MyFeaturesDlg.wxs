		<Control Id="groupBox1" Type="GroupBox" Height="90" Width="350" X="10" Y="50" Text="!(loc.MyFeaturesDlg_Components)" />
		<Control Id="checkBox2" Type="CheckBox" Height="30" Width="331" X="25" Y="65" Text="!(loc.MyFeaturesDlg_Mediaserver)" Property="INSTALL_SERVER" CheckBoxValue="1" />
