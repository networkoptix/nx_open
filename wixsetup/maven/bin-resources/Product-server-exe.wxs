<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:bal="http://schemas.microsoft.com/wix/BalExtension">
    <?include BuildVars.wxi ?>

    <Bundle Name="$(var.productName) Server" Version="$(var.releaseVersionFull)" UpgradeCode="$(var.serverBundleUpgradeCode)" DisableModify="yes">
        <BootstrapperApplicationRef Id="WixStandardBootstrapperApplication.RtfLicense">
            <bal:WixStandardBootstrapperApplication
                LicenseFile="License.rtf"
                LogoFile="logo.png"
                SuppressOptionsUI="yes"
            />
        </BootstrapperApplicationRef>

        <!-- For some reason vcredist 24215 installs 24210 -->
        <Chain>
            <PackageGroupRef Id="VC14RedistPackageGroup"/>

            <RollbackBoundary />

            <PackageGroupRef Id="ServerPackageGroup"/>
        </Chain>
    </Bundle>
</Wix>