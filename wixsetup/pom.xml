<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>hdwitness</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>wixsetup</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness Installer</name>

    <properties>
        <product.title>${wixsetup.name}</product.title>
        <root.dir>${basedir}/..</root.dir>
        <skip.test>true</skip.test>
        <skip.compress>true</skip.compress>
        <nxtool>false</nxtool>
        <final.artifact.name>${installer.name}</final.artifact.name>
        <NxtoolQuickControlsDir>${libdir}\bin\${build.configuration}\qml\QtQuick\Controls</NxtoolQuickControlsDir>
        <ClientFontsDir>${libdir}\bin\${build.configuration}\fonts</ClientFontsDir>
        <ClientQmlDir>${libdir}\bin\${build.configuration}\qml</ClientQmlDir>
        <VSRedistDir>${environment.dir}\wix\Redist</VSRedistDir>
        <rdep.packages>vcredist-2015 vcredist-2012 vmaxproxy-2.1</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mediaserver</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/mediaserver/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>desktop_client</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/client/desktop_client/pom.xml</systemPath>            
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nxtool</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/nxtool/pom.xml</systemPath>            
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>axclient</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/client/activex_client/pom.xml</systemPath>            
        </dependency>                   
    </dependencies>     

    <build>
        <directory>${arch}</directory>
        <sourceDirectory>${basedir}</sourceDirectory>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>auto-clean</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <skip>${clean-skip}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>        
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-parent-certificates</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <overwrite>true</overwrite>
                            <resources>          
                                <resource>
                                    <directory>${environment.dir}/customization/${parent.customization}/wixsetup</directory>
                                </resource>          
                            </resources>              
                        </configuration>            
                    </execution>          
                    <execution>
                        <id>copy-certificates</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <overwrite>true</overwrite>
                            <resources>          
                                <resource>
                                    <directory>${environment.dir}/customization/${customization}/wixsetup</directory>    
                                </resource>             
                            </resources>              
                        </configuration>            
                    </execution>                      
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.2</version>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                        <configuration>
                            <encoding>utf-8</encoding>
                            <file>${project.build.directory}/CustomActions/CustomActions-${arch}.vcxproj</file>
                            <ignoreMissingFile>true</ignoreMissingFile>                                    
                            <replacements>
                                <replacement>
                                    <token>
                                        <![CDATA[<PlatformToolset>v110</PlatformToolset>]]>
                                    </token>
                                    <value>
                                        <![CDATA[<PlatformToolSet>${PlatformToolSet}</PlatformToolSet>]]>
                                    </value>
                                </replacement>           
                            </replacements>
                        </configuration>                                
                    </execution>
                </executions>
            </plugin>                     

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>

                    <execution>
                        <id>package-CustomActions-with-msbuild</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${project.build.directory}/build.bat</executable>
                            <workingDirectory>${project.build.directory}/CustomActions/</workingDirectory>      
                        </configuration>
                    </execution>

                    <execution>
                        <id>wix-gen</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${init.python.dir}/python</executable>
                            <arguments>
                                <argument>wix-gen.py</argument>
                            </arguments>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                        </configuration>                    
                    </execution>

                    <execution>
                        <id>wix-compile</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${init.python.dir}/python</executable>
                            <arguments>
                                <argument>wix-compile.py</argument>
                            </arguments>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                        </configuration>                    
                    </execution>                   

                    <execution>
                        <id>pack</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${project.build.directory}/pack.bat</executable>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                        </configuration>    
                    </execution>
                </executions>
            </plugin>        

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2.2</version>
                <executions>
                    <execution>
                        <id>client-update-package</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-update-client.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>
                            <finalName>client-update</finalName>                            
                        </configuration>
                    </execution>    
                    <execution>
                        <id>server-update-package</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-update-server.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>                            
                            <finalName>server-update</finalName>                            
                        </configuration>
                    </execution>
                    <execution>
                        <id>pack-debug-client</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-debug-client.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>                            
                        </configuration>
                    </execution>                    
                    <execution>
                        <id>pack-debug-server</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-debug-server.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>                            
                        </configuration>
                    </execution>
                    <execution>
                        <id>pack-debug-misc.xml</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-debug-misc.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>                            
                        </configuration>
                    </execution>
                    <execution>
                        <id>pack-debug-libs.xml</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-debug-libs.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>                            
                        </configuration>
                    </execution>
                    <execution>
                        <id>pack-debug-cloud.xml</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.build.directory}/assembly-debug-cloud.xml</descriptor>
                            </descriptors>
                            <outputDirectory>${project.build.directory}/pack</outputDirectory>                            
                        </configuration>
                    </execution>              
                </executions>               
            </plugin>               
        </plugins>
    </build>       
    <profiles>
        <profile>
            <id>nxtool-installer</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
                <file>
                    <missing>../customization/${customization}/nxtool.skip</missing>
                </file>
            </activation>
            <properties>
                <nxtool>true</nxtool>
            </properties>            
        </profile>    
    </profiles>    
</project>
