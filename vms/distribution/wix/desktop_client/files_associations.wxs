<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <DirectoryRef Id="INSTALLDIR">
            <Component Id="NovFileAssociation">
                <RegistryValue
                    Root="HKCR"
                    Type="string"
                    Key="HDW.nov"
                    Value="${customization.vmsName} Video (.nov)"
                    KeyPath="yes"/>

                <RegistryValue
                    Root="HKCR"
                    Type="string"
                    Key="HDW.nov\shell\open\command"
                    Value="&quot;[#minilauncher_binary]&quot; &quot;%1&quot;"/>

                <RegistryValue
                    Root="HKCR"
                    Type="string"
                    Key="HDW.nov\DefaultIcon"
                    Value="&quot;[#client.exe]&quot;"/>

                <RegistryValue
                    Root="HKCR"
                    Type="string"
                    Key=".nov"
                    Value="HDW.nov" />

                <RegistryValue
                    Root="HKLM"
                    Type="string"
                    Key="SOFTWARE\Classes\SystemFileAssociations\.nov\shell\play.${minilauncher.binary.name}"
                    Value="Play with ${customization.vmsName}"/>

                <RegistryValue
                    Root="HKLM"
                    Type="string"
                    Key="SOFTWARE\Classes\SystemFileAssociations\.nov\shell\play.${minilauncher.binary.name}\command"
                    Value="&quot;[#minilauncher_binary]&quot; &quot;%1&quot;"/>

                <RegistryValue
                    Root="HKCR"
                    Type="string"
                    Key="Applications\${client.binary.name}\SupportedTypes"
                    Name=".nov"
                    Value=""/>

                <RegistryValue
                    Root="HKLM"
                    Type="string"
                    Key="Software\Clients\Media\EVE media player\Capabilities\FileAssociations"
                    Name=".nov"
                    Value="HDW.nov"/>
            </Component>
        </DirectoryRef>
    </Fragment>
</Wix>
