<h1>{{event}} <b>{{triggerName}}</b> has been activated</h1>

{{#count}}

<table class="description">
    <thead>
        <tr>
	        <th>#</th>
            {{#sourceIcon}}
                <th/>
            {{/sourceIcon}}
            <th>Source</th>
            <th>User</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
    {{#aggregated}}
        <tr>
            <td>{{index}}</td>
            {{#sourceIcon}}
            <td>
                <img src="{{sourceIcon}}">
            </td>
            {{/sourceIcon}}
            <td><b>{{source}}</b> ({{sourceIp}})</td>
            <td>{{user}}</td>
            <td>{{timestampDate}} <b>{{timestampTime}}</b></td>
        </tr>
    {{/aggregated}}
    </tbody>
</table>

<div class="date">
    Trigger has been activated {{count}} times, first:<br/>
    <b>{{timestampDate}} {{timestampTime}}</b>
</div>

{{/count}}

