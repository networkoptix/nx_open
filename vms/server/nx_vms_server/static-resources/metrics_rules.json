{
    "systems": {
        "info": {
            "values": {
                "name": {
                    "display": "panel"
                },
                "recommendedMaxServers": {
                    "calculate": "const 100"
                },
                "servers": {
                    "display": "panel",
                    "alarms": [{
                        "level": "warning",
                        "condition": "greaterThen %servers %recommendedMaxServers",
                        "text": "The maximum number of %recommendedMaxServers servers per system is reached. Create another system to use more servers"
                    }]
                },
                "users": {
                    "display": "panel"
                },
                "recommendedMaxCameras": {
                    "calculate": "const 10000"
                },
                "cameras": {
                    "display": "panel",
                    "alarms": [{
                        "level": "warning",
                        "condition": "greaterThen %servers %recommendedMaxCameras",
                        "text": "The maximum number of %recommendedMaxCameras camera channels per system is reached. Create another system to use more cameras"
                    }]
                },
                "version": {
                    "display": "panel"
                }
            }
        }
    },
    "servers": {
        "state": {
            "values": {
                "name": {
                    "display": "table|panel"
                },
                "status": {
                    "display": "table|panel",
                    "alarms": [{
                        "level": "error",
                        "condition": "notEqual %status Online",
                        "text": "Status is %status"
                    }]
                },
                "offlineEvents": {
                    "name": "Server Offline events (24h)",
                    "display": "table|panel",
                    "calculate": "countValues %status 24h Offline",
                    "insert": "uptimeS",
                    "alarms": [{
                        "level": "warning",
                        "condition": "greaterThen %offlineEvents 1",
                        "text": "went Offline %offlineEvents times in last 24 hours"
                    }]
                },
                "uptimeS": {
                    "name": "Uptime",
                    "unit": "s",
                    "display": "table|panel"
                }
            }
        }
    },
    "cameras": {
        "info": {
            "values": {
                "name": {
                    "display": "table|panel"
                },
                "server": {
                    "display": "table|panel"
                },
                "type": {
                    "display": "table|panel"
                },
                "ip": {
                    "name": "IP",
                    "display": "table|panel"
                },
                "vendor": {
                    "display": "panel"
                },
                "model": {
                    "display": "panel"
                },
                "firmware": {
                    "display": "panel"
                },
                "recording": {
                    "name": "Recording",
                    "display": "table|panel"
                }
            }
        },
        "availability": {
            "status": {
                "display": "table|panel",
                "alarms": [
                    {
                        "level": "warning",
                        "condition": "equal %status Unauthorized",
                        "text": "Status is %status"
                    },
                    {
                        "level": "error",
                        "condition": "equal %status Offline",
                        "text": "Status is %status"
                    }
                ]
            },
            "offlineEvents": {
                "name": "Camera Offline events (24h)",
                "display": "table|panel",
                "calculate": "countValues %status 24h Offline",
                "alarms": [
                    {
                        "level": "warning",
                        "condition": "greaterThen %offlineEvents 1",
                        "text": "went Offline %offlineEvents times in last 24 hours"
                    }
                ]
            },
            "streamIssues1h": {
                "name": "Stream issues (1h)",
                "display": "table|panel",
                "calculate": "sum %streamIssues 1h",
                "insert": "streamIssues",
                "alarms": [
                    {
                        "level": "warning",
                        "condition": "greaterThen %streamIssues1h 0",
                        "text": "has stream issues %streamIssues1h times in last hour"
                    },
                    {
                        "level": "error",
                        "condition": "greaterThen %streamIssues1h 5",
                        "text": "has stream issues %streamIssues1h times in last hour"
                    }
                ]
            },
            "ipConflicts3min": {
                "name": "IP conflicts (3min)",
                "display": "panel",
                "calculate": "sum %ipConflicts 3m",
                "insert": "ipConflicts",
                "alarms": [
                    {
                        "level": "error",
                        "condition": "greaterThen %ipConflicts3min 0",
                        "text": "has IP conflicts %ipConflicts3min times in last 3 minute"
                    }
                ]
            }
        },
        "primaryStream": {
            "values": {
                "resolution": {
                    "name": "Resolution",
                    "display": "table|panel"
                },
                "fps": {
                    "display": "Target fps"
                },
                "actualFps": {
                    "display": "Actual fps"
                },
                "actualBitrate": {
                    "name": "Bitrate",
                    "display": "panel",
                    "unit": "KBps"
                }
            }
        },
        "secondaryStream": {
            "values": {
                "resolution": {
                    "name": "Resolution",
                    "display": "table|panel"
                },
                "fps": {
                    "display": "Target fps"
                },
                "actualFps": {
                    "display": "Actual fps"
                },
                "actualBitrate": {
                    "name": "Bitrate",
                    "display": "panel",
                    "unit": "KBps"
                }
            }
        }
    },
    "storages": {
        "info": {
            "values": {
                "name": {
                    "display": "table|panel"
                },
                "server": {
                    "display": "table|panel"
                },
                "type": {
                    "display": "table|panel"
                }
            }
        },
        "state": {
            "values": {
                "status": {
                    "display": "table|panel"
                },
                "issues24h": {
                    "name": "Issues (24h)",
                    "display": "table|panel",
                    "calculate": "sum %issues 24h",
                    "insert": "issues"
                }
            }
        },
        "activity": {
            "values": {
                "readRateKBps1m": {
                    "name": "Read rate",
                    "display": "table|panel",
                    "unit": "KBps",
                    "calculate": "average %readRateKBps 1m",
                    "insert": "readRateKBps"
                },
               "writeRateKBps1m": {
                    "name": "Write rate",
                    "display": "table|panel",
                    "unit": "KBps",
                    "calculate": "average %writeRateKBps 1m",
                    "insert": "writeRateKBps"
                }
            }
        },
        "space": {
            "values": {
                "totalSpaceGb": {
                    "name": "Total space",
                    "display": "table|panel",
                    "unit": "GB"
                },
                "mediaSpacePercents": {
                    "name": "VMS Media(%)",
                    "display": "table|panel",
                    "unit": "%"
                },
                "mediaSpaceGb": {
                    "name": "VMS Media",
                    "display": "panel",
                    "unit": "Gb"
                }
            }
        }
    },
    "networkInterfaces": {
        "info": {
            "values": {
                "name": {
                    "display": "table|panel"
                },
                "server": {
                    "display": "table|panel"
                },
                "ip": {
                    "name": "IP",
                    "display": "table|panel"
                }
            }
        },
        "rates": {
            "name": "I/O rates",
            "values": {
                "inBps": {
                    "name": "IN rate",
                    "unit": "bps",
                    "display": "table|panel"
                },
                "outBps": {
                    "name": "OUT rate",
                    "unit": "bps",
                    "display": "table|panel"
                }
            }
        }
    }
}
