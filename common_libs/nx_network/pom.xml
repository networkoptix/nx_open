<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <artifactId>common_libs</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>nx_network</artifactId>
    <packaging>pom</packaging>
    <name>NX Network Library</name>

    <properties>
        <!--Global libs-->
        <template>lib</template>
        <qt.libs>core gui network xml xmlpatterns sql concurrent multimedia</qt.libs>
        <template>lib</template>
        <global.libs>-lnx_tool -ludt</global.libs>
        <ffmpeg.libs/>
        <!--Specific os libs used-->
        <windows.oslibs>-lcommon -lws2_32 DbgHelp.lib -lIphlpapi -lOle32 -lsigar -lSecur32 -lwinmm -lssleay32 -llibeay32</windows.oslibs>
        <windows.oslibs.release/>
        <windows.oslibs.debug/>
        <linux.oslibs>-lsigar -lswscale -lquazip</linux.oslibs>
        <mac.oslibs>-framework IOKit -framework CoreFoundation -lcrypto -lssl -lz -framework QtConcurrent -lsigar-universal64-macosx</mac.oslibs>
        <android.oslibs>-lssl -lcrypto -lz</android.oslibs>
        <!--Global defines-->
        <global.defines/>
        <!--Specific os defines-->
        <windows.defines>_USING_V110_SDK71_</windows.defines>
        <linux.defines/>
        <mac.defines/>
        <android.defines/>
        <ios.defines/>
        <buildLib>sharedLib</buildLib>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>udt</artifactId>
            <version>4.11.0-SNAPSHOT</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/udt/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
