    <groupId>com.networkoptix.hdwitness</groupId>
    <version>4.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>connection_mediator_ut</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud Connection Mediator Unit Tests</name>

    <properties>
        <guid>${connection_mediator_ut.guid}</guid>

        <qt.libs>core network xml concurrent sql multimedia</qt.libs>
        <global.libs>-lcommon -lnx_network -ludt -lcloud_db_client -lconnection_mediator -lnx_fusion -lnx_utils -lappserver2 -lcloud_db</global.libs>
        <windows.oslibs>Ws2_32.lib DbgHelp.lib Winmm.lib Iphlpapi.lib</windows.oslibs>

        <windows.defines>_VARIADIC_MAX=10</windows.defines>
        <rdep.packages>gtest gmock openssl quazip</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libconnection_mediator</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libconnection_mediator/pom.xml</systemPath>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
    </dependencies>

