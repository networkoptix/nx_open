    <groupId>com.networkoptix.hdwitness</groupId>
    <version>2.6.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>connection_mediator_ut</artifactId>
    <packaging>pom</packaging>
    <name>HD Cloud Connection Mediator Unit Tests</name>

    <properties>
        <product.title>HD Cloud Connection Mediator Unit Tests</product.title>
        <!--Global libs-->
        <qt.libs>core network xml concurrent sql multimedia</qt.libs>
        <global.libs>-lcommon -lnx_utils -lnx_streaming -lnx_network -ludt -lcloud_db_client -lconnection_mediator</global.libs>
        <!--Specific os libs used-->
        <windows.oslibs>Ws2_32.lib DbgHelp.lib Winmm.lib -lssleay32 -llibeay32 Iphlpapi.lib</windows.oslibs>
        <linux.oslibs>-lavcodec -lavformat -lavutil -lquazip -lfaac -lmp3lame -lswscale</linux.oslibs>
        <linux.arm.oslibs></linux.arm.oslibs>
        <windows.oslibs.release></windows.oslibs.release>
        <windows.oslibs.debug></windows.oslibs.debug>
        <mac.oslibs></mac.oslibs>
        <!--Global defines-->
        <global.defines></global.defines>
        <!--Specific os defines-->
        <windows.defines>_VARIADIC_MAX=10</windows.defines>
        <linux.defines/>
        <mac.defines/>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libconnection_mediator</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libconnection_mediator/pom.xml</systemPath>
        </dependency>
    </dependencies>

