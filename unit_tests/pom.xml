<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>hdwitness</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.2.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.2.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>unit_tests</artifactId>
    <packaging>pom</packaging>
    <name>Unit Tests Package</name>

    <properties>
        <root.dir>${basedir}/..</root.dir>
        <template>app</template>
        <qt.libs/>
    </properties>

    <modules>
        <module>cloud_connectivity_ut</module>
        <module>nx_network_ut</module>
        <module>utils_ut</module>
        <module>appserver2_ut</module>
        <module>common_ut</module>
        <module>vms_utils_ut</module>
        <module>nx_media_ut</module>
        <module>nx_fusion_ut</module>
    </modules>

    <profiles>

        <profile>
            <id>not-macosx</id>
            <activation>
                <os>
                    <family>!mac</family>
                </os>
            </activation>
            <modules>
                <module>mediaserver_core_ut</module>
            </modules>
        </profile>

        <profile>
            <id>noarm</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>arch</name>
                    <value>!arm</value>
                </property>
            </activation>
            <modules>
                <module>cloud_db_ut</module>
                <module>connection_mediator_ut</module>
                <module>traffic_relay_ut</module>

                <module>client_ut</module>
                <module>vms_gateway_ut</module>
            </modules>
            <properties>
                <modification>ubuntu</modification>
            </properties>
        </profile>

        <profile>
            <id>linux-arm-bpi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>bpi</value>
                </property>
            </activation>
            <modules>
                <module>../nx_cloud/libcloud_db</module> <!-- Required by mediaserver_core_ut. -->
            </modules>
        </profile>

        <profile>
            <id>linux-arm-tx1</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>tx1</value>
                </property>
            </activation>
            <modules>
                <module>client_ut</module>
                <module>vms_gateway_ut</module>
            </modules>
        </profile>
    </profiles>

</project>
