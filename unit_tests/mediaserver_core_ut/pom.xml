    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>mediaserver_core_ut</artifactId>
    <packaging>pom</packaging>
    <name>VMS Mediaserver Core Unit Tests</name>

    <properties>
        <root.dir>${basedir}/../..</root.dir>
        <!--Specify the project to test-->
        <master.project.directory>mediaserver_core</master.project.directory>

        <qt.libs>core network xml xmlpatterns sql concurrent multimedia websockets</qt.libs>
        <global.libs>-lmediaserver_core -lcommon -lnx_network -lnx_fusion -lnx_streaming -lappserver2 -lnx_email -ludt -lcloud_db_client -lcloud_db -lnx_speech_synthesizer -lnx_utils</global.libs>
        <windows.oslibs>Ws2_32.lib DbgHelp.lib -lIphlpapi -lwinmm Wldap32.lib Crypt32.lib</windows.oslibs>
        <linux.oslibs>-ldl -lldap -ltermcap</linux.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>

        <windows.defines>EC2_LIB_API=__declspec(dllimport) _VARIADIC_MAX=10 WIN32_LEAN_AND_MEAN</windows.defines>

        <path>${env.PATH}</path>
        <rdep.packages>gtest openssl ffmpeg onvif quazip sigar festival</rdep.packages>
        <rdep.linux.arm.packages>sasl2 openldap</rdep.linux.arm.packages>
        <guid>{ae551dde-06e7-4153-8871-f9ffabcf230e}</guid>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mediaserver_core</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/mediaserver_core/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>linux-arm-bpi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>bpi</value>
                </property>
            </activation>
            <properties>
                <linux.oslibs>-ldl -lldap</linux.oslibs>
            </properties>
        </profile>
    </profiles>
</project>
