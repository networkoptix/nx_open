    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>cloud_db_ut</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud Db Unit Tests</name>

    <properties>
        <product.title>cloud_db unit tests</product.title>

        <qt.libs>core network xml concurrent sql multimedia</qt.libs>
        <global.libs>-lcommon -lnx_network -lnx_streaming -ludt -lcloud_db -lcloud_db_client -lnx_fusion -lnx_utils -lappserver2</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm Wldap32.lib</windows.oslibs>

        <windows.defines>_VARIADIC_MAX=10</windows.defines>

        <rdep.packages>gtest gmock openssl quazip ffmpeg</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libcloud_db</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libcloud_db/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
