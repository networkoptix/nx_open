    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>nx_media_ut</artifactId>
    <packaging>pom</packaging>
    <name>NX Media Unit Tests</name>

    <properties>
        <guid>${connection_mediator_ut.guid}</guid>

        <qt.libs>core multimedia sql concurrent</qt.libs>
        <global.libs>-lnx_media -lcommon -lnx_streaming -lnx_audio -lnx_network -ludt -lnx_fusion -lnx_utils</global.libs>
        <windows.oslibs>Ws2_32.lib DbgHelp.lib Winmm.lib Iphlpapi.lib</windows.oslibs>
        <linux.oslibs>-lopenal</linux.oslibs>
        <windows.defines>_VARIADIC_MAX=10 WIN32_LEAN_AND_MEAN</windows.defines>
        <rdep.packages>gtest gmock openssl quazip ffmpeg</rdep.packages>
        <rdep.windows.packages>openal</rdep.windows.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_media</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_media/pom.xml</systemPath>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_network</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_network/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
