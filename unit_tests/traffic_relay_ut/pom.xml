    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>traffic_relay_ut</artifactId>
    <packaging>pom</packaging>
    <name>Nx Cloud Traffic Relay Tests</name>

    <properties>
        <product.title>traffic_relay unit tests</product.title>
        <template>app</template>

        <qt.libs>core network xml concurrent sql multimedia</qt.libs>
        <global.libs>-lnx_network -ludt -ltraffic_relay -lnx_cassandra -lcloud_db_client -lnx_fusion -lnx_utils</global.libs>
        <windows.oslibs>-lws2_32 -lIphlpapi DbgHelp.lib -lwinmm Wldap32.lib</windows.oslibs>

        <windows.defines>_VARIADIC_MAX=10</windows.defines>

        <rdep.packages>gtest gmock openssl cassandra-2.7.0</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libtraffic_relay</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libtraffic_relay/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
