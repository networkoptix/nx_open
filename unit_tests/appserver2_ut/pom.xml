    <groupId>com.networkoptix.hdwitness</groupId>
    <version>4.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>appserver2_ut</artifactId>
    <packaging>pom</packaging>
    <name>VMS AppServer2 Unit Tests</name>

    <properties>
        <root.dir>${basedir}/../..</root.dir>
        <!--Specify the project to test-->      
        <master.project.directory>appserver2</master.project.directory>
        <guid>{a1071d46-9ff2-48d3-affd-2ab7e1d70255}</guid>

        <qt.libs>core gui network xml sql concurrent</qt.libs>
        <global.libs>-lcommon -lnx_network -lappserver2 -lnx_fusion -lcloud_db_client -lnx_utils -lnx_kit -lnx_plugin_utils -lnx_sdk</global.libs>
        <windows.oslibs>Ws2_32.lib DbgHelp.lib -lIphlpapi -lwinmm</windows.oslibs>
        <mac.oslibs>-lbz2 -lz -framework IOKit -framework CoreServices</mac.oslibs>

        <windows.defines>_VARIADIC_MAX=10</windows.defines>

        <path>${env.PATH}</path>
        <rdep.packages>gtest openssl ffmpeg</rdep.packages>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>appserver2</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/appserver2/pom.xml</systemPath>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mediaserver_core</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/mediaserver_core/pom.xml</systemPath>
        </dependency>
    </dependencies>    
