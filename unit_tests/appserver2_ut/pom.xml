<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>build_ut</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>2.6.0-SNAPSHOT</version>
        <relativePath>../build_ut</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>2.6.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>appserver2_ut</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness AppServer2 Unit Tests</name>

    <properties>
        <guid>${appserver2_ut.guid}</guid>
        <product.title>${appserver2.name} Unit Tests</product.title>
        <root.dir>${basedir}/../..</root.dir>
        <!--Specify the project to test-->      
        <master.project.directory>appserver2</master.project.directory>
        <!--Global libs-->
        <qt.libs>core gui network xml sql concurrent</qt.libs>
        <global.libs>-lcommon -lnx_streaming -lnx_network -lappserver2 -lnx_utils</global.libs>
        <!--Specific os libs used-->
        <windows.oslibs>Ws2_32.lib DbgHelp.lib -lIphlpapi -lwinmm</windows.oslibs>
        <linux.oslibs></linux.oslibs>
        <windows.oslibs.release/>
        <windows.oslibs.debug/>     
        <mac.oslibs>-lbz2 -lz -framework IOKit -framework CoreServices</mac.oslibs>
        <!--Global defines-->
        <global.defines></global.defines>
        <!--Specific os defines-->
        <windows.defines>EC2_LIB_API=__declspec(dllimport) _VARIADIC_MAX=10</windows.defines>
        <linux.defines/>
        <mac.defines/>
        <path>${env.PATH}</path>
        <rdep.packages>openssl quazip</rdep.packages>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>appserver2</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/appserver2/pom.xml</systemPath>
        </dependency>
    </dependencies>    
</project>
