    <version>3.1.1-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>vms_gateway_ut</artifactId>
    <packaging>pom</packaging>
    <name>VMS Cloud Gateway Unit Tests</name>

    <properties>
        <guid>${vms_gateway_ut.guid}</guid>
        <qt.libs>core network xml concurrent sql multimedia</qt.libs>
        <global.libs>-lvms_gateway_core -lcommon -lconnection_mediator -lrelaying -lcloud_db_client -lnx_fusion -lnx_utils -lnx_network -ludt</global.libs>
        <windows.oslibs>Ws2_32.lib DbgHelp.lib Winmm.lib Iphlpapi.lib</windows.oslibs>

        <windows.defines>_VARIADIC_MAX=10</windows.defines>
        <rdep.packages>gtest gmock openssl</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libvms_gateway_core</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libvms_gateway_core/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>libconnection_mediator</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/nx_cloud/libconnection_mediator/pom.xml</systemPath>
        </dependency>
    </dependencies>

