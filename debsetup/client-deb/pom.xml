<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>debsetup</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>client-deb</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness Client Deb Package</name>	

    <properties>
        <!-- Change it to point relatively to the root-->
        <root.dir>${basedir}/../..</root.dir>
        <common.depends>libstdc++6 (>= 4.1.1), zlib1g (>= 1:1.1.4), debconf (>= 0.5) | debconf-2.0, upstart-job, psmisc, upstart (>= 0.6.5-8), libxi6, libxrender1, libxt6, libfontconfig1, libsm6, libice6, libaudio2</common.depends>
        <arch.depends/>
    </properties>

    <build>
        <directory>${arch}</directory>
        <outputDirectory>${arch}</outputDirectory>	
    </build>

    <profiles>
        <profile>
            <id>linux-arm-tx1</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>tx1</value>
                </property>
            </activation>
            <properties>
                <arch.depends>, libxcb-xinerama0</arch.depends>              
            </properties>
        </profile>    
    </profiles>    
</project>
