<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>debsetup</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.2.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.2.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>mediaserver-deb</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness Media Server Deb Package</name>

    <properties>
        <!-- Change it to point relatively to the root-->
        <root.dir>${basedir}/../..</root.dir>
        <!-- cifs-utils are installed BEFORE the package by the install package -->
        <common.depends>libstdc++6 (>= 4.1.1), zlib1g (>= 1:1.1.4), debconf (>= 0.5) | debconf-2.0, python, upstart-job, psmisc, upstart (>= 0.6.5-8), libsm6, libice6, libaudio2, libogg0, libxfixes3, libxrender1, libfontconfig1, libgl1-mesa-glx, cifs-utils</common.depends>
        <arch.depends />
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>root_tool</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/root_tool/pom.xml</systemPath>
        </dependency>
    </dependencies>

    <build>
        <directory>${arch}</directory>
        <outputDirectory>${arch}</outputDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <encoding>CP1251</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>linux-noarm</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>arch</name>
                    <value>!arm</value>
                </property>
            </activation>
            <properties>
                <rdep.packages>appserver-2.2.1 cifs-utils</rdep.packages>
                <arch.depends>, syslinux</arch.depends>
            </properties>
        </profile>
    </profiles>
</project>
