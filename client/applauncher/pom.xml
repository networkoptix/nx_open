<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>cpp</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.2.0-SNAPSHOT</version>
        <relativePath>../../cpp</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.2.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>applauncher</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness Desktop Client Launcher</name>

    <properties>
        <root.dir>${basedir}/../..</root.dir>
        <guid>${applauncher.guid}</guid>
        <product.title>${applauncher.name}</product.title>
        <template>app</template>

        <qt.libs>core gui network xml widgets</qt.libs>
        <global.libs>-lcommon -lnx_utils -lnx_network -ludt -lnx_fusion</global.libs>
        <windows.oslibs>DbgHelp.lib Ws2_32.lib Iphlpapi.lib Winmm.lib</windows.oslibs>
        <mac.oslibs>-framework IOKit -framework CoreServices</mac.oslibs>

        <rdep.packages>openssl quazip any/qtsinglecoreapplication</rdep.packages>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common/pom.xml</systemPath>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_network</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common_libs/nx_network/pom.xml</systemPath>
        </dependency>
    </dependencies>

</project>
