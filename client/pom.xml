<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
	<parent>
		<artifactId>cpp</artifactId>
		<groupId>com.networkoptix.hdwitness</groupId>
		<version>2.0.3-SNAPSHOT</version>
		<relativePath>../cpp</relativePath>
	</parent>

	<groupId>com.networkoptix.hdwitness</groupId>
	<version>2.0.3-SNAPSHOT</version>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>client</artifactId>
	<packaging>pom</packaging>
	<name>HD Witness Client</name>

	<properties>
		<product.title>${client.name}</product.title>
		<!--Global libs-->
		<global.libs/>
		<!--Specific os libs used-->
		<windows.oslibs>-lws2_32 -lIphlpapi -lOle32 -lwinmm</windows.oslibs>
		<linux.oslibs>-lcrypto -lz -lopenal</linux.oslibs>
		<mac.oslibs>-lbz2 -framework IOKit -framework CoreServices -framework OpenAL -lswscale -lavformat -lavcodec -lavutil -framework QtDesigner</mac.oslibs>
		<!--Global defines-->
		<global.defines/>
		<!--Specific os defines-->
		<windows.defines/>
		<linux.defines/>
		<mac.defines/>
                <postfix.libs>unix: LIBS += -ltermcap</postfix.libs>
	</properties>   
	<profiles>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<compiler>msvc2008</compiler>
				<arch>x86</arch>
				<platform>windows</platform>
			</properties>
			<build>
				<plugins>					
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.1.1</version>
						<executions>
							<execution>
								<id>launcher-compile</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>build-${arch}.bat</executable>
									<workingDirectory>${basedir}/resource/launcher</workingDirectory>		
									<arguments>
										<commandlineArgs>${build.configuration}</commandlineArgs>
									</arguments>
								</configuration>
							</execution>							
						</executions>
					</plugin>	
				</plugins>
			</build>
		</profile>	
                <profile>
                        <id>linux</id>
                        <activation>
                                <os>
                                        <family>unix</family>
                                        <name>linux</name>
                                </os>
                        </activation>
		</profile>	
	</profiles>
</project>
