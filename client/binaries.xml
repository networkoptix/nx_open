<assembly>
	<id>${parsedVersion.majorVersion}.${parsedVersion.minorVersion}-${platform}-${arch}-${customization}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${libdir}/bin/${build.configuration}</directory>
			<outputDirectory>../${parsedVersion.majorVersion}.${parsedVersion.minorVersion}/bin</outputDirectory>
			<includes>
				<include>client-bin</include>
				<include>client.exe</include>
			</includes>
			<excludes>
				<exclude>**/.hidden</exclude>
			</excludes>			
		</fileSet>			
		<fileSet>
			<directory>${libdir}/build/bin/${build.configuration}</directory>
			<outputDirectory>../${parsedVersion.majorVersion}.${parsedVersion.minorVersion}/lib</outputDirectory>
			<includes>
				<include>libcommon.so.${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}</include>
				<include>libQtSolutions_ColorPicker-2.6.so</include>				
			</includes>
			<excludes>
				<exclude>**/.hidden</exclude>
			</excludes>			
		</fileSet>			
	</fileSets>	
</assembly>