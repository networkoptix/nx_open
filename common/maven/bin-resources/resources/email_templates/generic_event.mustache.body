I<div class="content">
    <div class="callout">

        <h4>Event: {{caption}}</h3>
        {{#description}}
            <p> {{description}}</p>
        {{/description}}

        <h4>Date(s) when the event is occured:</h4>
        {{#aggregated}}
        <table class="details">
            <tr>
                <td><i>{{timestamp}}</i></td>
            </tr>
        </table>
        {{/aggregated}}
    
        {{#hasCameras}}
            <h4>Related cameras:</h4>
            <table>
                {{#cameras}}
                    <tr>
                        <td>{{name}}</td>
                        <td>
                            {{#urlint}}
                                <p><a href="{{urlint}}">Play archive (internal link)</a></p>
                            {{/urlint}}
                        </td>
                        <td>
                            {{#urlext}}
                                <p><a href="{{urlext}}">Play archive (public link)</a></p>
                            {{/urlext}}
                        </td>
                    </tr>

                    {{#screenshot}}
                        <tr>
                            <td colspan="3">
                                <img alt="Screenshot" src="{{screenshot}}"/>
                            </td>
                        </tr>
                    {{/screenshot}}
                {{/cameras}}
            </table>
        {{/hasCameras}} 
    </div>
</div>

