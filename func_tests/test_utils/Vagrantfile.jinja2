Vagrant.configure("2") do |config|

  config.vm.box = "ubuntu/trusty64"
  config.ssh.forward_agent = true
  config.ssh.insert_key = false

  config.vm.provider :virtualbox do |vb|
    vb.memory = 512
    vb.cpus = 1
    vb.customize [:modifyvm, :id, "--cpuexecutioncap", "75"]
    vb.customize [:modifyvm, :id, "--ioapic", "on"]
    vb.customize [:modifyvm, :id, "--vram", "32"]
    # network created by virtualbox by default conflicts with nx moscow local network 10.0.2.0/23; natnet1 will override it
    vb.customize [:modifyvm, :id, "--natnet1", "{{ natnet1 }}"]
  end


  {% for box in boxes -%}

  config.vm.define "{{ box.box_name }}" do |box|

    box.vm.provider :virtualbox do |vb|
      vb.name = "{{ box.vm_box_name }}"

      {%- for command in box.vbox_commands %}

      vb.{{ command }}

      {%- endfor %}
    end

    box.vm.hostname = "{{ box.box_name }}"
    # Uncomment it to provide access to a box by forwarding ssh port
    # box.vm.network :forwarded_port, guest: 22, host: {{ box.ssh_forwarded_port }},  host_ip: "0.0.0.0", id: "ssh", auto_correct: true
    box.vm.network :forwarded_port, guest: {{ box.rest_api_internal_port }}, host: {{ box.rest_api_forwarded_port }}

    {% for command in box.vm_commands -%}

    box.{{ command }}

    {% endfor %}
  
  end

  {% endfor %}

end
