<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>edge_firmware</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.2.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.2.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>rpi</artifactId>
    <packaging>pom</packaging>
    <name>Raspberry Pi Installer</name>

    <properties>
        <!-- Change it to point relatively to the root-->
        <root.dir>${basedir}/../..</root.dir>
    </properties>

    <build>
        <directory>target-${box}</directory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>filter-resources</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <overwrite>true</overwrite>
                            <encoding>ISO-8859-1</encoding>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../maven/bin-resources</directory>
                                    <filtering>false</filtering>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../maven/filter-resources</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>linux-arm-bpi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>bpi</value>
                </property>
            </activation>
            <properties>
                <!-- <rdep.linux.packages>
                </rdep.linux.packages> -->
                <rdep.linux.packages>
                    uboot-2014.04-10733-gbb5691c-dirty-vanilla
                    libvdpau-1.0.4.1
                    read-edid-3.0.2
                    a10-display
                    fontconfig-2.11.0
                    bpi/additional-fonts

                    <!-- Uncomment to enable Debian 8 and libc/libstdc++ upgrade -->
                <!--
                    proxy-decoder
                    ldpreloadhook-1.0
                    libpixman-0.34.0
                    libvdpau-sunxi-1.0
                    libcedrus-1.0
                    libstdc++-6.0.20
                    libc6-2.23
                    curl-7.51.0
                -->
                    proxy-decoder-deb7
                    ldpreloadhook-1.0-deb7
                    libpixman-0.34.0-deb7
                    libvdpau-sunxi-1.0-deb7
                    libcedrus-1.0-deb7
                    libstdc++-6.0.19
                 </rdep.linux.packages>
                <linux.oslibs>-lz</linux.oslibs>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>mobile_client</artifactId>
                    <version>17.2.4-SNAPSHOT</version>
                    <type>pom</type>
                    <scope>system</scope>
                    <systemPath>${root.dir}/client/mobile_client/pom.xml</systemPath>
                </dependency>
            </dependencies>
        </profile>

        <!-- ATTENTION: cifs-utils enabled only for rpi, because its version for bananapi in
            buildenv/packages/bpi is broken. Enable when it's fixed. -->
        <profile>
            <id>linux-arm-rpi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>rpi</value>
                </property>
            </activation>
            <properties>
                <rdep.linux.packages>cifs-utils</rdep.linux.packages>
            </properties>
        </profile>
    </profiles>
</project>
