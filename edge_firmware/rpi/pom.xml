    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>rpi</artifactId>
    <packaging>pom</packaging>
    <name>Raspberry Pi Installer</name>

    <properties>
        <!-- Change it to point relatively to the root-->
        <root.dir>${basedir}/../..</root.dir>
        <rdep.linux.packages>cifs-utils</rdep.linux.packages>
    </properties>
    <profiles>
        <profile>
            <id>linux-arm-bpi</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
                <property>
                    <name>box</name>
                    <value>bpi</value>
                </property>
            </activation>
            <properties>
                <!-- Uncomment to enable libc/libstdc++ upgrade -->
                <!-- <rdep.linux.packages>uboot-2014.04-10733-gbb5691c-dirty-vanilla ldpreloadhook-1.0 libpixman-0.34.0 libump-3.0 libvdpau-sunxi-1.0 libcedrus-1.0 libvdpau-1.0.4.1 libc6-2.23 libstdc++-6.0.20 read-edid-3.0.2 a10-display ffmpeg-3.0.2 fontconfig-2.11.0 curl-7.51.0</rdep.linux.packages> -->
                <rdep.linux.packages>uboot-2014.04-10733-gbb5691c-dirty-vanilla ldpreloadhook-1.0-deb7 libpixman-0.34.0-deb7 libump-3.0 libvdpau-sunxi-1.0-deb7 libcedrus-1.0-deb7 libvdpau-1.0.4.1 libstdc++-6.0.19 read-edid-3.0.2 a10-display ffmpeg-3.0.2 fontconfig-2.11.0 proxy-decoder-deb7 fonts-takao-mincho-00303.01</rdep.linux.packages>
                <linux.oslibs>-lz</linux.oslibs>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>mobile_client</artifactId>
                    <version>17.2.4-SNAPSHOT</version>
                    <type>pom</type>
                    <scope>system</scope>
                    <systemPath>${root.dir}/client/mobile_client/pom.xml</systemPath>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
