<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
	<parent>
		<artifactId>cpp</artifactId>
		<groupId>com.networkoptix.hdwitness</groupId>
		<version>1.3.1</version>
		<relativePath>../cpp</relativePath>
	</parent>

	<groupId>com.networkoptix.hdwitness</groupId>
	<version>1.3.1</version>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>quicksyncdecoder</artifactId>
	<packaging>pom</packaging>
	<name>HD Witness Intel Quick Sync decoder plugin</name>	

	<properties>
		<product.title>${quicksyncdecoder.name}</product.title>	
		<!--Global libs-->
		<global.libs></global.libs>
		<!--Specific os libs used-->
		<windows.oslibs>-lcommon -lws2_32 -lIphlpapi -lwinmm -lopengl32 -lglu32 -lDxva2</windows.oslibs>
		<!--Global defines-->
		<global.defines/>
		<!--Specific os defines-->
		<windows.defines>WIN32_LEAN_AND_MEAN</windows.defines>
	</properties>  
</project>
