<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <artifactId>cpp</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>../cpp</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>4.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>nx_system_commands</artifactId>
    <packaging>pom</packaging>
    <name>Nx System Commands Library</name>

    <properties>
        <guid>${nx_system_commands.guid}</guid>
        <!--Global libs-->
        <template>lib</template>

        <qt.libs>core</qt.libs>
        <global.libs></global.libs>
        <windows.oslibs>DbgHelp.lib</windows.oslibs>
        <mac.oslibs>-framework CoreFoundation</mac.oslibs>

        <windows.defines>_USING_V110_SDK71_</windows.defines>
        <buildLib>staticLib</buildLib>
    </properties>

    <dependencies>
    </dependencies>

    <profiles>
        <profile>
            <id>mobile-android</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>box</name>
                    <value>android</value>
                </property>
            </activation>
            <properties>
                <buildLib>staticlib</buildLib>
            </properties>
        </profile>
        <profile>
            <id>mobile-ios</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>box</name>
                    <value>ios</value>
                </property>
            </activation>
            <properties>
                <buildLib>staticlib</buildLib>
            </properties>
        </profile>
    </profiles>
</project>
