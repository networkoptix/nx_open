<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>hdwitness</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>4.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>unit_tests_run</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness Unit Tests Runner</name>

    <properties>
        <root.dir>${basedir}/..</root.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mediaserver-deb</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/debsetup/mediaserver-deb/pom.xml</systemPath>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>client-deb</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/debsetup/client-deb/pom.xml</systemPath>
        </dependency>	

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/common_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nx_network_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/nx_network_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>mediaserver_core_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/mediaserver_core_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>cloud_db_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/cloud_db_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>connection_mediator_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/connection_mediator_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>appserver2_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/appserver2_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>cloud_connectivity_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/cloud_connectivity_ut/pom.xml</systemPath>
        </dependency>	
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>utils_ut</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/unit_tests/utils_ut/pom.xml</systemPath>		
        </dependency>	            
    </dependencies>		    

    <build>
        <plugins>
            <plugin> 
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <id>gen-qrc</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>./run_tests.sh</executable>
                            <workingDirectory>${root.dir}</workingDirectory>
                            <!-- arguments>
                                <argument>stable_tests</argument>
                            </arguments -->
                        </configuration>
                    </execution>  
                </executions>                            
            </plugin> 
        </plugins>                    
    </build>                    
</project>
