###########################################################################
##                                                                       ##
##  Extract feats of type $2 into $3 from files named in $1              ##
##                                                                       ##
###########################################################################

LANG=C; export LANG

DATAFILE=$1
UNITTYPE=$2
OUTFEATS=$3

if [ $# != 3 ]
then
   echo usage: cg_get_f0_feats etc/txt.done.data pau_161 festival/feats/pau_161.feats
   exit -1
fi

awk '{print $2}' $DATAFILE |
while read i
do
   cat festival/coeffs/$i.mcep |
   awk '{print $1,$2}' |
   paste - festival/coeffs/$i.feats
done |
awk '{if ($1 == "'$UNITTYPE'")
      {
        printf("%f ",$2);
        for (i=5; i<=NF; i++)
           printf("%s ",$i);
        printf("\n");
      }}' |
awk '{if (NR <= 20000) print $0}' > $OUTFEATS




