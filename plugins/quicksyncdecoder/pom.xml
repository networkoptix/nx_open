	<groupId>com.networkoptix.hdwitness</groupId>
	<version>3.1.1-SNAPSHOT</version>
	<artifactId>quicksyncdecoder</artifactId>
	<packaging>pom</packaging>
	<name>Nx Witness Intel Quick Sync decoder plugin</name>	

	<properties>
		<guid>${quicksyncdecoder.guid}</guid>
        <product.title>${quicksyncdecoder.name}</product.title>	

		<qt.libs>core gui network opengl xml multimedia concurrent</qt.libs>
		<global.libs>-lcommon -lprotobuf</global.libs>
		<windows.oslibs>DbgHelp.lib -lDxErr -ld3d9 -lws2_32 -lIphlpapi -lwinmm -lopengl32 -lglu32 -lDxva2</windows.oslibs>

        <windows.defines>NOMINMAX</windows.defines>

        <rdep.packages>openssl ffmpeg mfx-2012-R2</rdep.packages>
	</properties>

    <dependencies>
