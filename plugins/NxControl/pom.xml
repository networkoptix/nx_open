<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>hdwitness</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>2.3.0-SNAPSHOT</version>
        <relativePath>../..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>2.3.0-SNAPSHOT</version>
    <artifactId>nxcontrol</artifactId>
    <packaging>pom</packaging>
    <name>NxControl</name> 

    <properties>
        <product.title>NxControl</product.title>    
        <root.dir>${basedir}/../..</root.dir>
    </properties> 
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>build_variables</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/build_variables/pom.xml</systemPath>            
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>nxinterface</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/plugins/nxinterface/pom.xml</systemPath>
        </dependency>        
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>axhdwitness</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/axhdwitness/pom.xml</systemPath>
        </dependency>        
    </dependencies>  
    <build>
        <directory>${arch}</directory>
        <outputDirectory>${arch}</outputDirectory>
        <sourceDirectory>${basedir}/src</sourceDirectory> 
        <plugins>
           <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <id>default-cli</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${project.build.directory}/build.bat</executable>
                            <workingDirectory>${project.basedir}</workingDirectory>     
                        </configuration>
                    </execution>
                </executions>
            </plugin>                                            
        </plugins>      
    </build>
</project>
