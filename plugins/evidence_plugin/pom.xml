<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>plugins</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>3.1.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.1.1-SNAPSHOT</version>
    <artifactId>evidence_plugin</artifactId>
    <packaging>pom</packaging>
    <name>Nx Witness Evidence Camera Integration Plugin</name>

    <properties>
        <guid>${evidence_plugin.guid}</guid>
        <product.title>${evidence_plugin.name}</product.title>

        <qt.libs>core network xml</qt.libs>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>build_variables</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/build_variables/pom.xml</systemPath>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
            </activation>
            <properties>
                <buildLib>sharedlib</buildLib>
            </properties>
        </profile>
        <dependencies>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>common</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>system</scope>
                <systemPath>${root.dir}/common/pom.xml</systemPath>
            </dependency>
        </dependencies>
    </profiles>
</project>
