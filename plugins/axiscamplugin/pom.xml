<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>plugins</artifactId>
		<groupId>com.networkoptix.hdwitness</groupId>
		<version>2.3.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
    
    <groupId>com.networkoptix.hdwitness</groupId>
    <version>1.5.0-SNAPSHOT</version>
    <artifactId>axiscamplugin</artifactId>
    <packaging>pom</packaging>
    <name>HD Witness AXIS camera integration plugin</name>	

    <properties>
        <product.title>${axiscamplugin.name}</product.title>	
        <!--Global libs-->
        <qt.libs>core network</qt.libs>
        <global.libs/>
        <!--Specific os libs used-->
        <windows.oslibs/>
        <windows.oslibs.release></windows.oslibs.release>
        <windows.oslibs.debug></windows.oslibs.debug>        
        <!--Global defines-->
        <global.defines/>
        <mac.defines/>
        <linux.defines/>
        <!--Specific os defines-->
        <windows.defines>WIN32_LEAN_AND_MEAN</windows.defines>
    </properties>  

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>system</scope>
            <systemPath>${root.dir}/common/pom.xml</systemPath>
        </dependency>
    </dependencies>


    <profiles>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
            </activation>
            <properties>
                <buildLib>sharedlib</buildLib>
            </properties>
        </profile>	
    </profiles>	
</project>
