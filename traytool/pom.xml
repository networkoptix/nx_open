<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
	<parent>
		<artifactId>cpp</artifactId>
		<groupId>com.networkoptix.hdwitness</groupId>
		<version>1.2.1-beta</version>
		<relativePath>../cpp</relativePath>
	</parent>

	<groupId>com.networkoptix.hdwitness</groupId>
	<version>1.2.1-beta</version>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>traytool</artifactId>
	<packaging>pom</packaging>
	<name>HD Witness Tray Assistant</name>	

	<properties>
		<product.title>${traytool.name}</product.title>		
		<donotrebuild>false</donotrebuild>
		<qtlib1>core</qtlib1>
		<qtlib2>gui</qtlib2>
		<qtlib3>network</qtlib3>
		<!--<qtlib4/>
		<qtlib5/>
		<qtlib6/>
		<qtlib7/>
		<qtlib8/>
		<qtlib9/>-->
		<!--QT plugins used-->		
		<qtplugin1>enter its name here...</qtplugin1>
		<qtplugin2>enter its name here...</qtplugin2>
		<qtplugin3>enter its name here...</qtplugin3>
		<!--Global libs-->
		<global.libs>-lcommon</global.libs>
		<!--Specific os libs used-->
		<windows.oslibs>-lws2_32 -lIphlpapi -lOle32 -lwinmm</windows.oslibs>
		<linux.oslibs>-lcrypto -lz</linux.oslibs>
		<mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>
		<!--Global defines-->
		<global.defines/>
		<!--Specific os defines-->
		<windows.defines/>
		<linux.defines/>
		<mac.defines/>			
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.nokia.qt</groupId>
			<artifactId>qtsingleapplication</artifactId>
			<version>4.7.4</version>
			<type>zip</type>
		</dependency>		
	</dependencies>		

	<build>
	</build>    
</project>