<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <!--
    Example pom for delegating maven goals to msbuild so it builds the "solution"
 
    A solution can be a group of projects, but here we only have one.
    It should also be possible to have one maven project per solution project, 
    and have a parent pom to deletegate the build.
  -->
    <parent>
        <artifactId>cpp</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>2.3.1-SNAPSHOT</version>
        <relativePath>../cpp</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>2.3.1-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>traytool</artifactId>
    <packaging>pom</packaging>
    <name>HD Witness Tray Assistant</name>  

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
            <type>pom</type> 
            <scope>system</scope>
            <systemPath>${root.dir}/common/pom.xml</systemPath>
        </dependency>			
    </dependencies>		

    <properties>
        <product.title>${traytool.name}</product.title>
        <product.display.title>${traytool.display.name}</product.display.title>
        <!--Global libs-->
        <global.libs>-lcommon</global.libs>
        <!--Specific os libs used-->
        <qt.libs>core gui widgets</qt.libs>
        <windows.oslibs>DbgHelp.lib</windows.oslibs>
        <windows.oslibs.release/>
        <windows.oslibs.debug/>
        <linux.oslibs>-lcrypto -lz</linux.oslibs>
        <mac.oslibs>-lbz2 -framework IOKit -framework CoreServices</mac.oslibs>
        <!--Global defines-->
        <global.defines/>
        <!--Specific os defines-->
        <windows.defines/>
        <linux.defines/>
        <mac.defines/>          
    </properties>
</project>
