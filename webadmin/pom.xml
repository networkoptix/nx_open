    <groupId>com.networkoptix.hdwitness</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>webadmin</artifactId>
    <packaging>pom</packaging>
    <name>Web Client and Server Admin Page</name>

    <properties>
        <root.dir>${basedir}/..</root.dir>
    </properties>

    <build>
        <plugins>    
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>auto-clean</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${project.build.sourceDirectory}</directory>
                                    <includes>
                                        <include>external.dat</include>
                                    </includes>
                                </fileset>                         
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>         
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>pack</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <failOnError>false</failOnError>
                            <target>                            
                                <chmod file="${project.basedir}/build.sh" perm="755"/>				
                                <exec dir="${project.basedir}" executable="./build.sh" failifexecutionfails="true" failonerror="true" />
                            </target>
                        </configuration>
                    </execution>                    
                </executions>
            </plugin>

            <!-- <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2.2</version>
                <executions>
                    <execution>
                        <id>pack-sdk</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>${project.basedir}/sdk.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>               
            </plugin>   -->    
        </plugins>    
    </build>
</project>
