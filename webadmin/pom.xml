<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>hdwitness</artifactId>
        <groupId>com.networkoptix.hdwitness</groupId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>4.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>webadmin</artifactId>
    <packaging>pom</packaging>
    <name>Web Client and Server Admin Page</name>

    <properties>
        <root.dir>${basedir}/..</root.dir>
    </properties>

    <build>
        <plugins>    
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>auto-clean</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${basedir}</directory>
                                    <includes>
                                        <include>external.dat</include>
                                    </includes>
                                </fileset>                         
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>         
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>pack</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>                            
                                <chmod file="${project.basedir}/build.sh" perm="755"/>				
                                <exec dir="${project.basedir}" executable="./build.sh" failifexecutionfails="true" failonerror="true" />
                            </tasks>
                        </configuration>
                    </execution>        
                    <execution>
                        <id>rdep</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>                            
                                <chmod file="${project.build.directory}/rdep.sh" perm="755"/>				
                                <exec dir="${project.build.directory}" executable="./rdep.sh" failifexecutionfails="true" failonerror="true" />
                            </tasks>
                        </configuration>
                    </execution>                       
                </executions>
            </plugin>
        </plugins>    
    </build>
</project>
