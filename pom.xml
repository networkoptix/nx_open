<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <groupId>com.networkoptix.hdwitness</groupId>
    <version>2.0.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>hdwitness</artifactId>
    <packaging>pom</packaging>
    <name>HD Witness</name>

    <scm>
        <connection>scm:hg:file:///${basedir}</connection>
        <developerConnection>scm:hg:file:///${basedir}</developerConnection>
    </scm>	

    <distributionManagement>
        <repository>
            <id>nexus-snapshots</id>
            <url>https://noptix.enk.me/nexus/content/repositories/snapshots/</url>
        </repository>
    </distributionManagement>	

    <properties>
        <release.version>${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}</release.version>

        <appserver.name>Enterprise Controller</appserver.name>
        <client.name>${company.name} ${product.name} Client</client.name>
        <client.mediafolder.name>${product.name} Media</client.mediafolder.name>
        <applauncher.name>${company.name} Launcher</applauncher.name>
        <axiscamplugin.name>${company.name} AXIS camera integration plugin</axiscamplugin.name>
        <genericrtspplugin.name>${company.name} generic RTSP plugin</genericrtspplugin.name>
        <mediaserver.name>${company.name} Media Server</mediaserver.name>
        <mediaproxy.name>${company.name} Media Proxy</mediaproxy.name>
        <testcamera.name>${company.name} Test Camera</testcamera.name>
        <traytool.name>${product.name} Tray Assistant</traytool.name>
        <vmaxproxy.name>${company.name} VMax Proxy</vmaxproxy.name>
        <license.environment>production</license.environment>

        <ClientHelpSourceDir>${libdir}/bin/help</ClientHelpSourceDir>
        <ClientVoxSourceDir>${libdir}/bin/${build.configuration}/vox</ClientVoxSourceDir>		                                  	
        <unpack.skip>false</unpack.skip>
        <ffmpeg.version>N-39672-g40b7a27-faac-SNAPSHOT</ffmpeg.version>
        <openssl.version>1.0.0j-custom-SNAPSHOT</openssl.version>
        <onvif.version>2.1.2-io-SNAPSHOT</onvif.version>
        <dvr.version>openAPI_19_2.5.8.35-SNAPSHOT</dvr.version>
        <sigar.version>1.6-SNAPSHOT</sigar.version>
        <festival.version>2.1-SNAPSHOT</festival.version>
        <boost.version>1.51.0</boost.version>
        <build.configuration>release</build.configuration>
        <buildNumber>0</buildNumber>
        <customization>default</customization>
        <!--QT libs used by ALL modules (to be included in the installer. It is necessary to specify the particular libs in the corresponding modules)--> 
        <qtlib1>core</qtlib1>
        <qtlib2>gui</qtlib2>
        <qtlib3>network</qtlib3>
        <qtlib4>opengl</qtlib4>
        <qtlib5>xml</qtlib5>
        <qtlib6>multimedia</qtlib6>
        <qtlib7>sql</qtlib7>
        <qtlib8/>
        <qtlib9/>
        <!--QT plugins used-->      
        <qtplugin1>imageformats</qtplugin1>
        <qtplugin2>sqldrivers</qtplugin2>
        <qtplugin3>enter its name here...</qtplugin3>	
    </properties>
    <modules>
        <module>build_environment</module>
        <module>appserver</module>
        <module>common</module>
        <module>applauncher</module>
        <module>axiscamplugin</module>
        <module>genericrtspplugin</module>
        <module>mediaserver</module>
        <module>mediaproxy</module>
        <module>client</module>		
        <module>testcamera</module>
    </modules>
    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>

            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>auto-clean</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <skip>${clean-skip}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>released-version</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>released-version</goal>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>hgchangeset</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>update</doUpdate>
                </configuration>
            </plugin>		
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>copy-common-resources</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>${basedir}/maven</directory>
                                    <filtering>true</filtering>
                                </resource>		
                            </resources>              
                            <encoding>UTF-8</encoding>
                        </configuration>            
                    </execution>
                </executions>
            </plugin>			
        </plugins>			
    </build>

    <profiles>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <modules>
                <module>quicksyncdecoder</module>	
                <module>axiscamplugin</module>
                <module>genericrtspplugin</module>
                <module>traytool</module>
                <module>vmaxproxy</module>	
                <module>wixsetup</module>
            </modules>
            <properties>
                <environment.dir>${env.ENVIRONMENT}</environment.dir>
                <python.dir>${env.ENVIRONMENT}/python/${arch}</python.dir>				
                <compiler>msvc2008</compiler>
                <arch>x86</arch>
                <platform>windows</platform>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>unpack-platform-libs</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>unpack-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <skip>${unpack.skip}</skip>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os> 
            </activation>
            <modules>
                <!--<module>xvbadecoder</module>-->
                <module>debsetup/client-deb</module>
                <module>debsetup/mediaserver-deb</module>
                <module>debsetup/appserver-deb</module>
            </modules>
            <properties>
                <environment.dir>${env.environment}</environment.dir>
                <python.dir>${env.environment}/python/bin</python.dir>				
                <qt.dir>${env.QTDIR}</qt.dir>				
                <platform>linux</platform>
                <compiler>gcc</compiler>
            </properties>
        </profile>	
        <profile>
            <id>linux-x64</id>
            <activation>
                <os>
                    <arch>amd64</arch>
                </os> 
            </activation>
            <properties>
                <arch>x64</arch>
            </properties>
        </profile>
        <profile>
            <id>linux-x86</id>
            <activation>
                <os>
                    <arch>i386</arch>
                    <!--<arch>i586</arch>
					<arch>i686</arch>-->
                </os> 
            </activation>
            <properties>
                <arch>x86</arch>
            </properties>
        </profile>	
        <profile>
            <id>android</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <modules>
                <module>android-client/protobuf-classes</module>
                <module>android-client/android-main</module>
            </modules>
        </profile>		
        <profile>
            <id>macosx</id>
            <activation>
                <os>
                    <family>mac</family>
                </os> 
            </activation>
            <modules>
                <module>ios-client</module>
            </modules>
            <properties>
                <environment.dir>${env.environment}</environment.dir>
                <python.dir>${env.environment}/python/bin/</python.dir>				
                <qt.dir/>
                <platform>macosx</platform>
                <compiler>gcc</compiler>
                <arch>x64</arch>
            </properties>
        </profile>	
    </profiles>	
</project>

